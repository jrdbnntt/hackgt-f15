extend ../layout

block localJS
	script(type='text/javascriot' src='/js/public/signin.js')

block content
	form.form-horizontal
		fieldset
			legend Sign In
			
			.control-group
				label.form-control(for='email') Email
				.controls
					input(type='email' name='email' required)
			
			.control-group
				label.form-control(for='email') Password
				.controls
					input(type='password' name='password' required)
						
			.control-group
				.controls
					button.btn(type='submit') Sign in